<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bugbusterzcorp.wildtechquizz.QuizzDetailActivity">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gifTextViewResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/city2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonGoPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Lancer le quizz"
        android:background="@drawable/borderbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewTitre"
        android:textAlignment="center"
        android:layout_width="313dp"
        android:layout_height="131dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="TITRE"
        android:textColor="@color/blue"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/gifTextViewResult"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="45dp"
        app:layout_constraintHorizontal_bias="0.505" />

    <TextView
        android:id="@+id/textViewEmptyList"
        android:layout_width="325dp"
        android:layout_height="280dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="128dp"
        android:text="Tu es le premier à réaliser ce quizz, fais le meilleur score."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/InfoQuizzListview"
        app:layout_constraintRight_toRightOf="@+id/InfoQuizzListview"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitre" />

    <ListView
        android:id="@+id/InfoQuizzListview"
        android:layout_width="368dp"
        android:layout_height="434dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoPlay"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="175dp"
        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintHorizontal_bias="0.508" />

</android.support.constraint.ConstraintLayout>
